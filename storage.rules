rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users (including anonymous) to read/write their own folder
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow Cloud Functions (admin) to read/write anywhere
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
  }
}
